<h2>All Heroines</h2>
<h1><%= flash[:notice] %></h1><br>
<%= form_tag("/search", method: "get") do %>
  <%= label_tag(:power_name, "Search for:") %>
  <%= text_field_tag(:power_name) %>
  <%= submit_tag("Search") %>
<% end %>

<ul>
  <% @heroines.each do |heroine| %>
    <li>
      <%= link_to heroine.super_name, heroine_path(heroine) %>
    </li>
    <br>
  <% end %>
</ul>

<h1><%= link_to "Create Your Own Heroine!", new_heroine_path %></h1>
