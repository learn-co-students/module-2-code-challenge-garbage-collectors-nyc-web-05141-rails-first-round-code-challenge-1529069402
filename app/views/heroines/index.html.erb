<h1>All Heroines</h1>

<h3>Search By Superpower:</h3>
<%= form_tag(heroines_path, :method => "get", id: "search-form") do %>
    <%= text_field_tag :search, params[:search], placeholder: "" %>
    <%= submit_tag "Search", :name => nil %>
<% end %>


<ul>
  <% @heroines.each do |heroine| %>
    <li>
      <%= link_to heroine.super_name, heroine %>
    </li>
    <br>
  <% end %>
</ul>
